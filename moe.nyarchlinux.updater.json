{
    "id" : "moe.nyarchlinux.updater",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "48",
    "sdk" : "org.gnome.Sdk",
    "command" : "nyarchupdater",
    "finish-args" : [
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--device=dri",
        "--socket=wayland",
        "--talk-name=org.freedesktop.Flatpak",
        "--filesystem=host"
    ],
    "build-options" : {
        "append-path" : "/usr/lib/sdk/typescript/bin:/usr/lib/sdk/node18/bin"
    },
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules" : [
        {
            "name" : "nyarchupdater",
            "builddir" : true,
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "git",
                    "url" : ".",
                    "branch" : "main"
                }
            ]
        },
        {
            "name": "PublicKey",
            "buildsystem": "simple",
            "build-commands": [
                "mkdir -p ${FLATPAK_DEST}/data/",
                "cp public.asc ${FLATPAK_DEST}/data/public.asc || echo a"
            ],
            "sources" : [
                {
                    "type": "file",
                    "path": "data/public.asc",
                    "sha256": "dd8fd09069ec664c96d3be4f92b43b80899b13a7259c401b8afbe321a9ed7cc2",
                    "dest-filename": "public.asc"
                }
            ]
        }
    ]
}
