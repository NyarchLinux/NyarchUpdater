{
    "id" : "moe.nyarchlinux.updater",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "47",
    "sdk" : "org.gnome.Sdk",
    "command" : "moe.nyarchlinux.updater",
    "finish-args" : [
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--device=dri",
        "--socket=wayland",
        "--talk-name=org.freedesktop.Flatpak",
        "--filesystem=host"
    ],
    "build-options" : {
        "append-path" : "/usr/lib/sdk/typescript/bin:/usr/lib/sdk/node18/bin"
    },
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules" : [
        {
            "name" : "nyarchupdater",
            "builddir" : true,
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "git",
                    "url" : ".",
                    "branch" : "main"
                }
            ]
        }
        {
            "name": "Key",
            "buildsystem": "simple",
            "build-commands": ["gpg --import data/public.asc"],
            "sources" : [
                {
                    "type": "file",
                    "url": "data/public.asc",
                }
            ]
        }
    ],
}
